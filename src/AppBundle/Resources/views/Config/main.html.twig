{% extends base_template %}

{% trans_default_domain 'kalamu' %}

{% block configurator %}
    {{form_start(form)}}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h1 class="box-title"><i class="fa fa-gears"></i> {{ 'CMS Configuration'|trans }}</h1>
        </div>
        <div class="box-body">
            <div class="col-xs-12">
                {{form_row(form.title)}}
                {{form_row(form.description)}}
                {{form_row(form.homepage_content)}}
                {{form_row(form.search_engine_allow)}}
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
        </div>
        {{form_rest(form)}}
        {{form_end(form)}}
    </div>
    <script type="text/javascript" src="{{asset('bundles/kalamucmsadmin/js/jquery.cmsLinkSelector.js')}}"></script>
{% endblock %}
