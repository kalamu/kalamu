{% extends base_template %}

{% trans_default_domain 'kalamu' %}

{% block configurator %}
    {{form_start(form)}}

    <div class="box box-primary">
        <div class='box-header with-border'>
            <h3 class="box-title"><i class="fa fa-{{icon}}"></i> {{title}}</h3>
        </div>
        <div class="box-body">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#index" data-toggle="tab">{{ 'General parameters'|trans }}</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="index">
                        {{form_row(form.analytics)}}
                        {{form_row(form.footer_template)}}
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
        </div>
    </div>

    {{ form_rest(form) }}
    {{form_end(form)}}
{% endblock %}
